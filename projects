  <script>
    const body = document.body;
    const themeIcon = document.getElementById('themeIcon');
    const menuToggle = document.getElementById('menuToggle');
    const nav = document.querySelector('nav');

    // Load theme preference
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme) {
      body.classList.add(currentTheme);
      themeIcon.textContent = currentTheme === 'dark-mode' ? 'ðŸŒ™' : 'ðŸ”…';
    }

    // Toggle theme
    document.getElementById('themeToggle').addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      const newTheme = body.classList.contains('dark-mode') ? 'dark-mode' : '';
      localStorage.setItem('theme', newTheme);
      themeIcon.textContent = newTheme === 'dark-mode' ? 'ðŸŒ™' : 'ðŸ”…';
    });

    // Toggle project card expansion
    function toggleProject(card) {
      const expandedContent = card.querySelector('.expanded-content');
      expandedContent.style.display = expandedContent.style.display === 'block' ? 'none' : 'block';
      card.classList.toggle('expanded');
    }
  </script>
